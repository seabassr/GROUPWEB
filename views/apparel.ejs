<%- include('layouts/header.ejs') %>
<%- include('layouts/navbar.ejs') %>

<div class="container">
    <h2><strong><%= pageTitle %></strong></h2><hr color="white">
    <div class="row">
        <% for(let p of products) { %>
        <div class="col-md-3">
            <!-- Card -->
            <div class="card">
                <!-- Card image -->
                <a href="/apparel/<%= p._id %>"><img class="card-img-top showcase" src="/img/<%= imgcategory %>/<%= p.img %>.jpg" alt="Card image cap"></a>
                <!-- Card content -->
                <div class="card-body">
                    <!-- Title -->
                    <h4 class="card-title"><a><%= p.title %></a></h4>
                    <h5 class="card-title"><a>$<%= p.price %></a></h5>
                    <!-- Text -->
                    <p class="card-text"><%= p.description %></p>
                    <!-- Button -->
                    <a href="#" class="btn btn-primary">Add to nonexistant cart</a>
                </div>
            </div>
            <!-- Card -->
        </div>
        <% } %>
    </div>
</div>

<%- include('layouts/footer.ejs') %>