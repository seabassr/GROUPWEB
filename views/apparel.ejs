<%- include('layouts/header.ejs') %>
<%- include('layouts/navbar.ejs') %>

<div class="containter">
    <h2><strong>Our Apparel</strong></h2><hr color="white">
    <div class="row">
        <% for(let p of products) { %>
        <div class="col-md-3">
            <!-- Card -->
            <div class="card">
                <!-- Card image -->
                <img class="card-img-top" src="img/<%= imgcategory %>/<%= p.img %>.jpg" alt="Card image cap">
                <!-- Card content -->
                <div class="card-body">
                    <!-- Title -->
                    <h4 class="card-title"><a><%= p.title %></a></h4>
                    <h5 class="card-title"><a><%= p.price %></a></h5>
                    <h5 class="card-title"><a><%= p.quantity %></a></h5>
                    <!-- Text -->
                    <p class="card-text"><%= p.description %>.</p>
                    <!-- Button -->
                    <a href="#" class="btn btn-primary">Add to nonexistant cart</a>
                </div>
            </div>
            <!-- Card -->
        </div>
        <% } %>
    </div>
</div>

<%- include('layouts/footer.ejs') %>