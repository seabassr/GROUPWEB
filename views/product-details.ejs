<%- include('layouts/header.ejs') %>
<%- include('layouts/navbar.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <a href="/img/<%= prodCategory %>/<%= prod.img %>.jpg"><img class="product-detail" src="/img/<%= prodCategory %>/<%= prod.img %>.jpg"></a>
        </div>
        <div class="col-md-6">
            <h4><strong><%= prod.title %></strong></h4>
            <p>
                <%= prod.description %>
                <br><hr>
                In stock. (<%= prod.quantity %> left)
                <br>
                $<%= prod.price %>
                <br>
                <form action="/add-cart" method="POST">
                    <input type="hidden" name="id" value="<%= prod._id %>">
                    <input type="hidden" name="catId" value="<%= prodCategory %>">
                    <button type="submit" name="btn btn-outline-default btn-rounded waves-effect">Add to nonexistant cart</button>
                </form>
            </p>
        </div>
    </div>
</div>

<%- include('layouts/footer.ejs') %>